<body class="container background">

<h1>Add New Book</h1>

<% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
<% } %>
  
<form id="bookForm" method="post" action="/add">
    <input type="text" id="bookSearch" class="form-control mb-2" placeholder="Search for a book title...">
    <ul id="searchResults" class="list-group mb-4"></ul>
  
    <label for="title" class="form-label">Title</label>
    <input type="text" name="title" id="title" class="form-control mb-2" placeholder="Title*" required>
    <label for="title" class="form-label">Author</label>
    <input type="text" name="author" id="author" class="form-control mb-2" placeholder="Author">
    <label for="title" class="form-label">ISBN</label>
    <input type="text" name="isbn" id="isbn" class="form-control mb-2" placeholder="ISBN (for retrieving cover image)">
    <label for="title" class="form-label">Date</label>
    <input type="date" name="date" id="date" class="form-control mb-2">
    <label for="title" class="form-label">Notes</label>
    <textarea name="notes" class="form-control mb-2" placeholder="Your notes..."></textarea>
    <label for="title" class="form-label">Rating</label>
    <input type="number" name="rating" class="form-control mb-2" placeholder="Rating (1-10)" min="1" max="10">
    
    <button type="submit" class="btn btn-primary">Add Book</button>
  </form>
  
</body>  

  <script>
    const searchInput = document.getElementById("bookSearch");
    const resultsList = document.getElementById("searchResults");
  
    searchInput.addEventListener("input", async (event) => {
      const query = event.target.value;
      if (!query) return (resultsList.innerHTML = "");
  
      const response = await fetch(`/search?q=${encodeURIComponent(query)}`);
      const books = await response.json();
  
      resultsList.innerHTML = "";
      
      books.forEach(book => {
        
        const item = document.createElement("li");
        item.className = "list-group-item list-group-item-action searchList d-flex align-items-center";

        const img = document.createElement("img");
        img.src = book.coverImage;
        img.alt = `${book.title} cover`;
        img.className = "me-6"; // Adds a little spacing
        img.style.height = "50px";

        const text = document.createElement("span");
        text.textContent = `${book.title} by ${book.author}`;

        item.appendChild(img);
        item.appendChild(text);
        
        //Auto-insert author and title into the form. Having difficulty getting the isbn to populate, 
        // perhaps in part because not all books have isbn's, but also because it appears isbn is not returned 
        // in the .json provided by openLibrary.
        item.addEventListener("click", () => {
            document.getElementById("title").value = book.title;
            document.getElementById("author").value = book.author;
            document.getElementById("isbn").value = book.isbn;
            resultsList.innerHTML = "";
            searchInput.value = book.title;
        });

        resultsList.appendChild(item);
      });

    });
  </script>

